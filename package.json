{
  "name": "simple-react-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cross-env NODE_ENV=development node server.cjs",
    "server:prod": "NODE_ENV=production node server.cjs",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\" --names \"React,Server\" --prefix-colors \"cyan,green\"",
    "start": "cross-env NODE_ENV=production node server.cjs"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "typescript": "^5.0.0",
    "vite": "^4.5.0"
  }
}
